extends base.pug

block content 
    div    
        video#preview 
        button#actionBtn Start recoding
    if errorMessage
        span=errorMessage
    form(method="POST", enctype="multipart/form-data")
        lable(for="video") Video File 
        input(type="file", accept="video/*", requierd, id="video", name="video")
        input(name="title", placeholder="Title", tyep="text", requierd, maxlength=80)
        input(name="description", placeholder="description", tyep="text", requierd, maxlength=100)
        input(name="hashtags", placeholder="hashtags", tyep="text", requierd)
        input(type ="submit",value="Upload Video")

block script
    script(src="/static/js/recoder.js")